DEMO_API_LIMIT=500
DEMO_CACHE_HOURS=2
DEMO_PRIMARY_SPORT=mlb

# ========================================
# PORTFOLIO LINKS
# ========================================
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername/odds-on-deck
NEXT_PUBLIC_PORTFOLIO_URL=https://yourportfolio.com

